    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".business.home.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".business.channel.ChannelDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".business.video.VideoActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".business.search.SearchActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".business.rank.RankActivity"
            android:screenOrientation="portrait"/>

        <meta-data android:value="587653cd310c93051a000ac9" android:name="UMENG_APPKEY"/>
